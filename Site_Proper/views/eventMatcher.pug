					label.switch(for='checkbox', style='margin-bottom: 0; margin-left: 4px;') Show events with related skills
				table.eventTable
					thead
						tr
							th Event Name
							th Moderated by
							th Location
							th Skills
							th Description 
							th Priority
							th Date
					tbody
						// events - All rows.
						// event  - One row.
						if events && events.length 
							each event in events 
								tr 
									td= event.name 
									td= event.moderator 
									td= event.location
									td= event.skills
									td= event.description
									td= event.priority
									td= event.date
